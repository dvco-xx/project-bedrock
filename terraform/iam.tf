resource "aws_iam_role_policy_attachment" "eks_registry_policy" {
  role       = aws_iam_role.eks_node_role.name
  policy_arn = "arn:aws:iam::aws:policy/AmazonEC2ContainerRegistryReadOnly"
}

# Developer Read-Only IAM User
resource "aws_iam_user" "developer" {
  name = "project-bedrock-developer"

  tags = {
    Environment = var.environment
  }
}

# Access Key for Developer User
resource "aws_iam_access_key" "developer_key" {
  user = aws_iam_user.developer.name
}

# Developer Policy (Read-only EKS access)
resource "aws_iam_user_policy" "developer_policy" {
  name = "${var.cluster_name}-developer-policy"
  user = aws_iam_user.developer.name

  policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Effect = "Allow"
        Action = [
          "eks:DescribeCluster",
          "eks:ListClusters"
        ]
        Resource = "*"
      },
      {
        Effect = "Allow"
        Action = [
          "ec2:DescribeSecurityGroups",
          "ec2:DescribeSubnets",
          "ec2:DescribeVpcs"
        ]
        Resource = "*"
      }
    ]
  })
}